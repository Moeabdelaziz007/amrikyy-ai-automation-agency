{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_SUPABASE_URL": "@supabase_url",
    "NEXT_PUBLIC_SUPABASE_ANON_KEY": "@supabase_anon_key",
    "GEMINI_API_KEY": "@gemini_api_key",
    "NEXT_PUBLIC_PY_BACKEND_URL": "@py_backend_url",
    "NEXT_PUBLIC_APP_URL": "@app_url"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "Permissions-Policy", "value": "camera=(), microphone=(), geolocation=()" },
        { "key": "Strict-Transport-Security", "value": "max-age=31536000; includeSubDomains" },
        { "key": "Content-Security-Policy", "value": "default-src 'self'; script-src 'self' 'unsafe-eval' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https://api.gemini.google.com https://api.serpapi.com; frame-ancestors 'none';" }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, no-cache, must-revalidate" },
        { "key": "X-Robots-Tag", "value": "noindex, nofollow" }
      ]
    },
    {
      "source": "/_next/static/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ],
  "rewrites": [
    { "source": "/api/bridge/(.*)", "destination": "/api/bridge/$1" },
    { "source": "/api/tools/(.*)", "destination": "/api/tools/$1" },
    { "source": "/api/agents/(.*)", "destination": "/api/agents/$1" },
    { "source": "/api/auth/(.*)", "destination": "/api/auth/$1" }
  ],
  "redirects": [
    { "source": "/dashboard", "destination": "/", "permanent": false },
    { "source": "/admin", "destination": "/dashboard", "permanent": false }
  ],
  "functions": {
    "frontend/app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "regions": ["iad1"],
  "crons": [
    { "path": "/api/cron/cleanup-tokens", "schedule": "0 2 * * *" },
    { "path": "/api/cron/audit-logs", "schedule": "0 0 * * *" }
  ]
}